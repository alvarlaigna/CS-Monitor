@section head
{	
	<script src="https://cdn.jsdelivr.net/npm/chart.js@2.7.2/dist/Chart.bundle.min.js"></script>
}

@section script
{
    <script>
        function UpdChart() {
                $.get(`${M_API}/GetTpsData`)
                    .done(function(model) {

                        $('#txt').text(`Points count: ${model.points.length}`);

                        var chart = new Chart($("#chart"),
                            {
                                type: 'line',
                                data: {
                                    datasets: [
                                        {
                                            label: 'Transactions per second',
                                            data: model.points,
                                            backgroundColor: [
                                                'rgba(32, 96, 196, 0.2)'
                                            ],
                                            borderColor: [
                                                'rgba(32, 96, 196, 1)'
                                            ],
                                            borderWidth: 1
                                        }
                                    ]
                                },
                                options: {
                                    scales: {
                                        xAxes: [
                                            {
                                                type: 'time',
                                                time: {
                                                    unit: 'second'
                                                },
                                                distribution: 'linear'
                                            }
                                        ]
                                    },
                                    elements: {
                                        line: {
                                            tension: 0
                                        }
                                    },
                                    animation: {
                                        duration: 0
                                    },
                                    hover: {
                                        animationDuration: 0
                                    },
                                    responsiveAnimationDuration: 0
                                }
                            });

                    });
        }

        UpdChart();
        setInterval(UpdChart, 2000);
    </script>
}

<h1 class="margin_top_1_625em">Transactions per second</h1>

<div class="whitepanel">
	<div id="txt" class="sub_text color_grey"></div>
	<br/>

	<canvas id="chart" width="800" height="400"></canvas>

</div>
